{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  }
}
